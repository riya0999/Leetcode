public class Solution {
    public boolean hasCycle(ListNode head) {
        if(head==null || head.next==null) return false;
        ListNode slow = head;
        ListNode fast = head;

        while(fast != null && fast.next != null){
            slow=slow.next;
            fast = fast.next.next;

            if(slow == fast){
                ListNode ptr1 = head;
                ListNode ptr2 = slow;
                while(ptr1 != ptr2){
                    ptr1 = ptr1.next;
                    ptr2 = ptr2.next;
                }
                return true;
            }
        }
        return false;
    }
}
