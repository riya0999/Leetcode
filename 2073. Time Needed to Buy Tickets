class Solution {
    public int timeRequiredToBuy(int[] tickets, int k) {
        Queue<Integer>queue=new LinkedList<>();
        int n=tickets.length;
        int time=0;
        for(int i=0;i<n;i++){
            queue.offer(i);
        }
        while(!queue.isEmpty()){
            int front = queue.poll();
            tickets[front]--;
            time++;

            if(tickets[front]>0){
                queue.offer(front);
            }
            if(front==k && tickets[front]==0){
                break;
            }
            
        }
        return time;
    }
}


        
    
